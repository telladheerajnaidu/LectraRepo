<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Regex Capture Test</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin-top: 50px; }
        .recordfound { font-size: 20px; color: blue; margin: 10px; }
    </style>
</head>
<body>

    <h2>Dynamic Record Capture</h2>
    <div class="recordfound"> 1000 ExampleText (10.5 ms) </div>
    <div class="recordfound"> 2000 AnotherText (20.8 ms) </div>

    <script>
        function getRandomInt(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        function updateValues() {
            const elements = document.querySelectorAll('.recordfound');

            elements.forEach((el) => {
                let randomNumber = getRandomInt(1000, 9999);
                let randomMs = (Math.random() * 100).toFixed(2);
                let randomText = ["ExampleText", "AnotherText", "TestRecord", "SampleData"][getRandomInt(0, 3)];
                
                el.innerHTML = `${randomNumber} ${randomText} (${randomMs} ms)`;
            });
        }

        function captureValues() {
            const regex = /([0-9]+[^"=\(]+\([0-9\.]+[ ][^ \)]+\))/;
            const elements = document.querySelectorAll('.recordfound');

            elements.forEach(el => {
                const match = el.innerHTML.match(regex);
                if (match) {
                    console.log("Captured Value:", match[1]);
                    // Set an indicator or use the captured value as needed
                }
            });
        }

        // Update values every 2 seconds and capture them
        setInterval(() => {
            updateValues();
            captureValues();
        }, 2000);
    </script>

</body>
</html>
